<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.mydrawing.DrawPath
        android:id="@+id/PaintArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="-39dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/ControlForward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_arrow_forward_24"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/ControlDelete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_delete_outline_24" />

        <ImageView
            android:id="@+id/ControlBackward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/ControlSend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_add_to_pc_24"
            android:layout_gravity="center"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>